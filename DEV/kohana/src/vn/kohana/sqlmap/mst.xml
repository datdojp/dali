<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="common">
	<!-- CATEGORY MST -->
	<sql id="categoryCommonSelect">
		SELECT
			code,
			name,
			image,
			supcat_code as supcatCode
	</sql>
	<select id="getCategory" parameterClass="string" resultClass="vn.kohana.mst.CategoryMst">
		<include refid="categoryCommonSelect"/>
		FROM category_mst
		WHERE
			code = #value#
	</select>
	
	<select id="getAllCategory" resultClass="vn.kohana.mst.CategoryMst">
		<include refid="categoryCommonSelect"/>
		FROM category_mst
	</select> 
</sqlMap>